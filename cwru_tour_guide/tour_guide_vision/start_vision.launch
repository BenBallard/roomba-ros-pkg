<launch>
	<node name="front_camera" pkg="uvc_cam" type="uvc_cam_node" respawn="true" output="screen">
	<remap from="camera" to="front_camera"/>
	<param name="camera_name" value="front_camera"/>
	<param name="device" value="/dev/video0"/>
	<param name="width" value="640"/>
	<param name="height" value="480"/>
	<param name="frame_rate" value="15"/>
	<param name="frame_id" value="front_camera"/>
	<param name="camera_info_url" value="file://$(find tour_guide_vision)/calibration/camera_a.yaml"/>
	<param name="exposure" value="1"/>
	<param name="absolue_exposure" value="8"/>
	</node>
	<node pkg="image_proc" type="image_proc" name="proc_front" ns="front_camera" />

	<node name="rear_camera" pkg="uvc_cam" type="uvc_cam_node" respawn="true" output="screen">
	<remap from="camera" to="rear_camera"/>
	<param name="camera_name" value="rear_camera"/>
	<param name="device" value="/dev/video1"/>
	<param name="width" value="640"/>
	<param name="height" value="480"/>
	<param name="frame_rate" value="15"/>
	<param name="frame_id" value="rear_camera"/>
	<param name="camera_info_url" value="file://$(find tour_guide_vision)/calibration/camera_c.yaml"/>
	<param name="exposure" value="1"/>
	<param name="absolue_exposure" value="8"/>
	</node>
	<node pkg="image_proc" type="image_proc" name="proc_rear" ns="rear_camera" />
</launch>
